{
    "version": 2,
    "builds": [
        {
            "src": "backend/package.json",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/backend/api"
        }
    ]
}